# Cluster API – Hetzner Cloud Provider (CAPH)
#
# These environment variables are consumed by clusterctl and the
# Hetzner infrastructure provider.  Copy this file to .env before
# running bootstrap.sh or clusterctl commands.

# ─── Hetzner API ────────────────────────────────────────────────
# Create at https://console.hetzner.cloud → Security → API Tokens
export HCLOUD_TOKEN="<your-hetzner-cloud-api-token>"

# SSH key name registered in Hetzner Cloud console
export HCLOUD_SSH_KEY="dkpbot-ssh"

# ─── Cluster Settings ──────────────────────────────────────────
export CLUSTER_NAME="dkpbot-prod"
export KUBERNETES_VERSION="v1.31.4"
export HCLOUD_REGION="fsn1"           # Falkenstein; also: nbg1, hel1
export CONTROL_PLANE_MACHINE_COUNT=3
export WORKER_MACHINE_COUNT=2

# ─── Machine Types ─────────────────────────────────────────────
export HCLOUD_CONTROL_PLANE_MACHINE_TYPE="cpx21"
export HCLOUD_WORKER_MACHINE_TYPE="cpx21"

# ─── Networking ────────────────────────────────────────────────
export HCLOUD_NETWORK_ZONE="eu-central"
